.wrapper h3.date {margin:0; padding:0; color:#000; font:300 16px/25px 'Lato', sans-serif;}
.wrapper h2.info {margin:0; padding:0; color:#000; font:300 30px/40px 'Lato', sans-serif;}
.wrapper p {margin:0; padding:8px 0; color:#000; font:300 20px/30px 'Lato', sans-serif;}
.wrapper p a {color:#2ab; text-decoration:none;}
.download {display:inline-block; width:200px; background:#080; border-radius:5px;  font:300 20px/30px 'Lato', sans-serif; color:#fff; text-decoration:none; padding:10px; white-space:nowrap;}
</style>

<style>
/* swiper styling */
.swiper-container{width:100%; background:#fff; margin:50px 0;}
.swiper-slide{text-align:center;background:#fff;display:-webkit-box;display:-ms-flexbox;display:-webkit-flex;display:flex;-webkit-box-pack:center;-ms-flex-pack:center;-webkit-justify-content:center;justify-content:center;-webkit-box-align:center;-ms-flex-align:center;-webkit-align-items:center;align-items:center;}
picture {width:calc(100% - 60px); padding-bottom:40px;}
picture img {display:block; width:100%;}
.swiper-pagination span {width:20px; height:20px; background:#c60; font-size:15px; color:#fff; transition:0.5s;}
.swiper-pagination span:hover {opacity:1;}
.swiper-button-prev-icon {position:absolute;top:0;width:31px; left:-1px; height:100%;margin-top:-22px;z-index:10;cursor:pointer; font-size:60px; text-align:center; background:#fff; color:#c60; display:flex; flex-direction:column; flex-wrap:nowrap; justify-content:center;}
.swiper-button-next-icon {position:absolute;top:0; right:-1px;width:31px;height:100%;margin-top:-22px;z-index:10;cursor:pointer;font-size:60px; text-align:center; background:#fff; color:#c60; display:flex; flex-direction:column; flex-wrap:nowrap; justify-content:center;}
.swiper-container section {position:absolute; left:30px; top:0; width:calc(100% - 60px); height:calc(100% - 50px); background:url(swiper-images/bg-grid.png); background-attachment:fixed; text-align:center;}
.swiper-container h1 {margin:0; padding:0; color:#fff; font:300 50px/70px 'Lato', sans-serif;}
.swiper-container p {margin:0; padding:0; color:#fff; font:400 20px/30px 'Lato', sans-serif; position:absolute; bottom:20px; left:0; width:100%;}
@media only screen and (max-width: 640px) {
  .swiper-container h1 {font:300 40px/55px 'Lato', sans-serif;}
  .swiper-container p {font:400 18px/22px 'Lato', sans-serif;}
}
@media only screen and (max-width: 480px) {
  .swiper-button-prev-icon {display:none;}
  .swiper-button-next-icon {display:none;}
  picture {width:100%;}
  .swiper-container section {left:0; width:100%;}
  .swiper-container h1 {font:300 30px/40px 'Lato', sans-serif;}
  .swiper-container p {font:400 15px/20px 'Lato', sans-serif;}
  .swiper-container section {width:100%;}
}
</style>
</head>
